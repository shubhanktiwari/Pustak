<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
android:background="@drawable/bg_action"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header_id"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:background="@drawable/pageheader"
        android:gravity="right"
        android:layout_marginBottom="5dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/back_icon_id"
            android:layout_width="35dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back_icon"
            android:layout_gravity="left|center"
            android:gravity="left|center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/page_Title_id"
            android:layout_width="0dp"
            android:layout_weight="0.30"
            android:layout_marginLeft="5dp"
            android:layout_gravity="left|center"
            android:gravity="left|center"
            android:text="wdwd"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="fill_parent"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/page_number_id"
            android:layout_width="wrap_content"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:layout_marginRight="4dp"
            android:layout_gravity="right|center"
            android:gravity="center"
            android:background="@color/black"
            android:text="page:"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_height="fill_parent"
            android:textColor="@color/white"
            />
        <ImageView
            android:id="@+id/sound_id"
            android:layout_width="35dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Sound"
            android:src="@drawable/speak_on"
            android:layout_gravity="right|center"
            android:gravity="right|center"
            android:layout_height="35dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/content_id"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent"
       android:layout_height="match_parent"
        android:layout_below="@id/header_id">

    </LinearLayout>

   <!-- <LinearLayout
        android:id="@+id/footer_id"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bg_action"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"/>-->

</RelativeLayout>